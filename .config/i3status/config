general {
    output_format = "i3bar"
    colors = true
    interval = 1
    color_good = "#40b040"
    color_degraded = "#b0b000"
    color_bad = "#f04040"
    # color_separator = "#0000f0"  # Has no affect, set in i3 config
    # Enable html sytles
    markup = "pango"
}

