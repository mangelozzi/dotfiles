order += "volume_master"
# order += "tztime berlin"

volume master {
    # format = " %volume "
    format = "<span color='#b0ffff'>ðŸ”ˆ %volume</span>"
    format_muted = "ðŸ”‡(%volume)"
    device = "pulse"
}

wireless wlan0 {
    format_up = " WIFI (%quality at %essid, %bitrate) %ip "
    format_down = ""
}

ethernet eno1 {
    # format_up = "E: %ip (%speed)"
    format_up = " %ip "
    format_down = "No Eth"
}

battery 0 {
    format = "<span color='#e0e040'>%status %percentage %remaining %emptytime</span>"
    format_down = "No battery"
    status_chr = "âš¡CHR"
    # Means running off battery
    # status_bat = "ðŸ”‹BAT"
    status_bat = "BAT"
    status_unk = "???"
    status_full = "FULL"
    path = "/sys/class/power_supply/BAT%d/uevent"
    low_threshold = 15
    # threshold_type: percentage
    threshold_type = time
    integer_battery_capacity = true
    # Make full charge be 100%
    # last_full_capacity = true
}

run_watch DHCP {
    pidfile = "/var/run/dhclient*.pid"
}

run_watch VPNC {
    # file containing the PID of a vpnc process
    pidfile = "/var/run/vpnc/pid"
}

path_exists VPN {
    # path exists when a VPN tunnel launched by nmcli/nm-applet is active
    path = "/proc/sys/net/ipv4/conf/tun0"
}

tztime local {
    format = "%Y-%m-%d %H:%M:%S"
    # hide_if_equals_localtime = true
}

tztime berlin {
    format = "%Y-%m-%d %H:%M:%S %Z"
    timezone = "Europe/Berlin"
}

load {
    format = "%5min"
}

cpu_temperature 0 {
    format = "T: %degrees Â°C"
    path = "/sys/devices/platform/coretemp.0/temp1_input"
}

memory {
    format = "%used"
    threshold_degraded = "10%"
    format_degraded = "MEMORY: %free"
}

disk "/" {
    format = "%free"
}

read_file uptime {
    path = "/proc/uptime"
}
cpu_usage {
    format = "<span color='#80f080'>CPU %usage</span>"
}
